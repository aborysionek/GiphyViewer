<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="normalToast">
        <item name="colorBackground">@color/colorSecondaryLight</item>
        <item name="textColor">@color/colorText</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">3dp</item>
        <item name="iconStart">@drawable/ic_message</item>
        <item name="iconEnd">@drawable/ic_message</item>
    </style>

    <style name="errorToast">
        <item name="colorBackground">@color/colorSecondaryLight</item>
        <item name="textColor">@color/colorText</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">3dp</item>
        <item name="iconStart">@drawable/ic_error</item>
        <item name="iconEnd">@drawable/ic_error</item>
    </style>
</resources>
